

- posts.each do |post|
    %div.post-header
        %div.post-happen-at
            %span= post.happen_at.year
            %span= post.happen_at.month
            %span= post.happen_at.day
        %div.post-title
            %p= link_to post.title , post
    %div.post-text
        %p= raw(post.html_content)
